<body>
    <div id="myModal" class="modal">

        <div class="modal-content">
            <span class="close">&times;</span>
            <p></p>
        </div>
</div>
    <div id="content">
        <div id="header">
            <div class="topnav" id="myTopnav">
                <a href="/gvj-api">HOME</a>
                <a href=""id="getmyprofile">PROFILE</a>
                <a href=""id="getmycart">CART</a>
                <a id = "logout" class="right" href="">LOG OUT</a>
                <a href="javascript:void(0);" class="icon" onclick="collapse()"><i class="fa fa-bars"></i></a>
            </div>
        </div>
        <div id="shopping-cart">
            <div id="title">
                My shopping Bag
            </div>
            <!-- <hr> -->
            <% var total = 0 %>
            <% if ((typeof(cart)==undefined) || (cart.length == 0)) { %>
            <div class="item">
                <div id="title1">
                    <p> Hey <b><%= user.firstname %></b> your cart is Empty!!! Quickly fire up the add to cart button in the home section </p>
                </div>
            </div>
            <% } else { %>
            <!-- start loop-->
            <% for (i of cart) { %>   
            <div class="item">
                <div class="button">
                    <i id="<%= i._id %>"  name = "" style="font-size: 28px; color: white;" class="fa fa-trash-o"></i>
                
                        <!-- <button     -->
                    <!-- class="delete-btn"  id="removefromcart"  name = "<%= i._id %>" > -->
                        <!-- <img src="cross.png" alt=""> -->

                    <!-- </button> -->
                </div>
                <div class="image">
                    <img src= <%= i.product.photo %> alt="">    
                </div>
                <div class="description">
                    <p> <%= i.product.description %></p>
                </div>
                <div class="quantity">

                    <span><%= i.count %></span> <br>
                    <p>Quantity: <input class="<%= i._id %>"  type="text" value=''></p>
                    <button id="apply" name = "<%= i._id %>" >APPLY</button>
                </div>
                <div class="total-price">
                    <h4>Price:</h4>₹<%= i.price * i.count %>
                    <% total = total + (i.price * i.count) %>
                </div>
            </div>
            <% } %>

            <div id="total">
                <p>Grand total : <span>₹<%=total %></span></p>
            </div>
            <div id="payment">
                <button class="btn btn-outline-success" id="checkout" name = "<%= user._id %> 
                    ">PROCEED TO PAYMENT <i style="font-size: 20px;"
                        class="fa fa-paper-plane"></i></button>
            </div>
        <% } %>
        </div>
        
        
        <div id="footer">
            <div class="botnav">
                <img src="/img/logo.jpg" alt="" id="logo">
                <a href="#appname">RAPID BASKET</a>
                <a class="right" href="/gvj-api/aboutus">About us</a>
            </div>
        </div>
    </div>
    <script>
        function collapse() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
        $(document).ready(function () {
    $("#apply").click(function () {
        var val = $("#quantity").val();
        $('span').text(val);
        $("#quantity").text = "";
    })

})
    </script>
</body>
