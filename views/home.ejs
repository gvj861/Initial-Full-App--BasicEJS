<html lang="en">
    <head>
        <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        
    <style>

* {
    margin: 0;
    padding: 0;
    background-color: rgb(13, 31, 34);
    
}
marquee {
    position: sticky;
    top: 5px;
    /* width: 400px; */
    /* left: 300px; */
    /* background-color: #0d312d; */
    color: white;
    height: 120px;
    direction: "right";
    padding: 10px;
}
marquee p {
    padding: 10px;
    font-size: 30px;
    width: 220px;
    font-weight: 200;
    letter-spacing: 1px;
    color: white;
    
    margin-bottom: 2px;
}
marquee img {
    width: 150px;
}
marquee p:nth-child(2) {
    font-size: 16px;
    font-weight: 500;
    width: 450px;
    padding: 2px 10px;
    letter-spacing: 1px;
}
section {
    position: relative;
    top: 30px;
    border-top: 1px solid white;
    padding: 0 26px 0 30px;
    /* border: 1px solid white; */
    overflow-x: hidden;
}
#filter {
    position: absolute;
    width: auto;
    height: 40px;
    margin: 10px;
    padding: 2px;
    display: flex;
    background-color: #075E54;
    /* border: 1px solid white; */
}
#filter h5 {
    /* display: block; */
    width: 70px;
    font-size: 18px;
    text-align: center;
    color: white;
    background-color: #075E54;
    margin: auto 10px;
}
@media screen and (max-width: 400px) {
    #filter {
        width: 320px;
        height: 50px;
    }
    #sortby, #type, #filterasrequired {
        width: 100%;
        margin: 2px 0px;
    }
    h5 {
        font-size: 16px;
    }
    .products {
        padding: 0px 10px 0 15px;
    }

}
#sortby, #type, #filterasrequired {
    color: white;
    outline: none;
    /* width: 100%; */
    padding: 2px 10px;
    margin: 2px 2px;
    outline: none;
    border: none;
}
 #sortby:hover, #type:hover {
    border: 1px solid white;
    padding: 4px 8px;
}
#filterasrequired:hover {
    background-color: white;
    color: #0d312d;
    cursor: pointer;
}
#header .topnav {
    list-style-type: none;
    margin: 0;
    max-width: 100%;
    padding: 5px;
    overflow: hidden;
    background-color: #075E54;
}

.topnav a {
    float: left;
    padding: 10px;
}

.topnav a {
    display: block;
    color: white;
    text-align: center;
    padding: 10px 16px;
    text-decoration: none;
}
.topnav i {
    background-color: #075E54;
}
.topnav a:hover {
    color: white;
    font-size: 17px;
    background-color: #0d312d;
    /* letter-spacing: 1px; */
    /* border-radius: 30px; */
    text-decoration: none;
}
.topnav a.right {
    float: right;
}
.topnav a.icon {
    display: none;
}
#logo {
    position: relative;
    max-width: 100px;
    /* left: 45%; */
    padding: 5px;
    margin: 5px 10px 5px 10px;
    cursor: pointer;
    background-color: #075E54;
}
@media screen and (max-width: 500px) {
    .topnav a:not(:first-child) { display: none;}
    .topnav a.icon {
        float: right;
        display: block;
    }
    .botnav {
        display: flex;
        height: 100px;
    }
    #logo {
        width: 100px;
        height: 60px;
    }
    .botnav a {
        font-size: 12px;
    }
    
}

@media screen and (max-width: 500px) {
    .topnav.responsive {position: relative;}
    .topnav.responsive .icon {
      position: absolute;
      right: 5px;
      top: 5px;
    }
    .topnav.responsive a {
      float: none;
      display: block;
      text-align: left;
    }
   
  }
#content {
    position: relative;
    width: 100%;
    height: auto;    
}
.products {
    /* margin-left: 30px; */
    display: flex;
    flex-wrap: wrap;
}
.product-card {
    /* padding: 10px; */
    width: 252px;
    /* margin-top: 100px; */
    margin: 80px 28px;
    /* margin-left: auto; */
    margin-bottom: 0px;
    flex: 1, 25%;
    flex-wrap: wrap;
    border: 1px solid rgb(192, 192, 192);

}
.product-card:hover {
    box-shadow: 1px 1px 20px 2px gray; 
    /* border: 1px solid black; */
}
.product-image {
    width: 250px;
}
.product-image img {
    position: relative;
    width: 250px;
    height: 300px;
    cursor: pointer;
    /* margin: 4px; */

}
.product-info {

    /* border: 1px solid; */
    /* margin: 2px; */
    padding: 0px 0 14px 0;
    /* width: auto; */
}
.product-info h5{
    margin: 10px 20px;
    position: relative;
    text-align: left;
    color: white;
}   

.product-info h6 {
    font-size: 26px;
    position: relative;
    color: white;
    margin: 16px;
    
}
.product-info p.discount {
    position: relative;
    top: -85px;
    margin: 0;
    font-size: 18px;
    left: 25px;
    /* text-align: right; */
    color: white;    
}
.product-info p {
    position: relative;
    float: right;
    left: -25px;
    top: -45px;
    color: white;
}

.btn-outline-success {
    position: relative;
    left: 70px;
}
.btn-outline-success:hover i {
    background-color: #28a745;
}
.addtocart i {
    font-size: 24px;
    background-color: rgb(13, 31, 34);
}
.buy-product button {
    position: relative;
    display: none;
    left: 10px;
    width: 120px;
    cursor: pointer;
    padding: 5px;
    border-radius: 10px;
    outline: none;
    background-color: rgb(30, 255, 0)
}

.buy-product button:hover {
    border: 2px solid rgb(0, 209, 0);
    color: green;
    background-color: white;
}
#footer {
    position: relative;
    top: 200px;
    bottom: 0px;
}

.botnav {
    list-style-type: none;
    margin: 0;
    max-width: 100vw;
    height: 100px;
    padding: 10px;
    overflow: hidden;
    background-color: #075E54;
}
.botnav #appname,.botnav a {
    position: relative; 
    width: 100px;
    /* display: block; */
    color: rgb(255, 255, 255);
    /* margin: 10px; */
    font-size: 16px;
    padding: 10px 5px;
    text-decoration: none;
    text-align: center;
}
.botnav a:hover {
    background-color: #0d312d;
}
.botnav a.right {
    /* position: relative; */
    float: right;
}    </style>
    
    
    <script src="https://js.stripe.com/v3/"></script>

    </head>
    <body>
        <div id="content">

            <!-- ---------------------------------------top navigation bar---------------------------------->
            <div id="header">
                <div class="topnav" id="myTopnav">
                    <a href="/gvj-api">HOME</a>
                    <% if (typeof(user) != 'undefined') { %>
                    <!-- Will come back for profile linking here -->
                    <a href="" id="getmyprofile" name = "<%= user._id %>" >PROFILE</a>
                     <% if (user.role == 1){ %>
                        <a id = "getpanel"name = "<%= user._id %>" href="">ADMIN PANEL</a>   
                        <% } %> 
                    <a href="" id= "getmycart" name = "<%= user._id %>">CART<i class="fa fa-shopping-cart"></i></a>
                    <a id = "logout" class="right" href="">LOG OUT</a>
                    <a href="javascript:void(0);" class="icon" onclick="collapse()"><i class="fa fa-bars"></i></a>
                    <% } else { %>
                    <a id="getlogin" class="right" href="">LOG IN</a>
                    <a id="getsignup" class="right" href="">SIGN UP</a>
                    <% } %>

                </div>
            </div>
            <marquee id="scroll_news" width="100%" direction="rght" scrollamount="18"
                onMouseOver="document.getElementById('scroll_news').stop();"
                onMouseOut="document.getElementById('scroll_news').start();">
                <p>RAPID BASKET <img src="/img/logo.jpg" alt=""></p>
                <p> Designed by Pavan & Developed by Jagannath</p>
            
            </marquee>
    
    
    
            <section class="products">
                <div id="filter">
                    <h5>Sort by :</h5>
                    <select id="sortby" name ="">
                        <option value="createdAt">Latest & Brand new</option>
                        <option value="price">Price</option>
                        <option value="sold">Popular & Trending</option>
                    </select>
                    <select name="" id="type">
                        <option value="desc">High</option>
                        <option value="asc">Low</option>
                    </select>
                    <input type="button" id="filterasrequired" value="Apply ">
                </div>
            
            <!-- Looping Products here -->

            <% for (i of product) { %>
    
                <div class="product-card">
                    <div class="product-image">
                        <img src= <%= i.photo %>  alt="tshirt image">
                    </div>
                    <div class="product-info">
                        <h5><%= i.name %></h5>
                        <h6>₹<%= i.price %></h6>
                        <p>₹<strike><%= (i.price)+(((i.price)*(i.discount))/100) %></strike></p>
                        <p class="discount"><%= i.discount %>% off</p>
                        <button type="button" id = "additemtocart" name="<%= i._id %>" class="btn btn-outline-success"
                          >Add to cart <i class="fa fa-shopping-cart"></i> </button>
                    </div>
                </div>
                <% } %>
                </section>

                <div id="footer">
                    <div class="botnav">
                        <img id="logo" src="/img/logo.jpg" alt="">
                        <a href="#appname">RAPID BASKET</a>
        
                        <a class="right" href="/gvj-api/aboutus">About us</a>
                    </div>
                </div>
     
            
        </div>
        
                
                
                
        <script>
            function collapse() {
                        var x = document.getElementById("myTopnav");
                        if (x.className === "topnav") {
                            x.className += " responsive";
                        } else {
                            x.className = "topnav";
                        }
                    }
            
            
                </script> 
                
                
                
                   
    </body>
    <script src="/js/bundle.js"></script>


</html>