<html>
    <head>
        <title>
            <%= 'title' %>
        </title>
    <script src="https://js.stripe.com/v3/"></script>

    </head>
    <body>
        <% if ((typeof(allorders)==undefined) || (allorders.length == 0)) { %>
            <p> There are no current Orders Placed or Orders Pending !!! </p>
        <% } else { %>
            
            
            Hello <%= 'ho' %>
<br>

            Your Orders
             <br>
            <br>
             <% for (i of allorders) { %>
                Order ID : <%= i._id %>
                <br>
                <br>
                Order Status : <%= i.status %> 
                <select id="<%= i._id %>" name="possiblestatus">
                    <option value= "Delivered"> D </option>
                    <option value= "Processing"> P </option>
                    <option value= "Shipped"> S </option>
                    <option value= "Cancelled"> C </option>
                </select>

                <input type="button" value="ChangeStatus" id = "changestatus" name ="<%= i._id %>">
        
                <br>
                <br>
                Transcation ID : <%= i.transaction_id %> 
                <br>
                <br>
                Total Amount Paid : <%= i.amount %>
                <br>
                <br>


            <% } %>    
                <% } %>
                <br>
                <br>
    </body>
    <script src="/js/bundle.js"></script>
</html>