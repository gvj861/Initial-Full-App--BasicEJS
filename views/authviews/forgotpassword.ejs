        <style>

* {
    margin: 0;
    padding: 0;
    background-color: rgb(13, 31, 34);   
}

#header .topnav {
    list-style-type: none;
    margin: 0;
    max-width: 100vw;
    padding: 5px;
    overflow: hidden;
    background-color: #075E54;
}

.topnav a {
    float: left;
    padding: 10px;
}

.topnav a {
    display: block;
    color: white;
    text-align: center;
    padding: 10px 16px;
    text-decoration: none;
}

.topnav a:hover {
    color: white;
    /* font-size: 17px; */
    background-color: #0d312d;
    /* letter-spacing: 1px; */
    /* border-radius: 30px; */
    text-decoration: none;
}

.topnav a.right {
    float: right;
}
.topnav .icon {
    display: none;
}
#logo {
    position: relative;
    max-width: 100px;
    /* left: 45%; */
    padding: 5px;
    margin: 5px 10px 5px 10px;
    cursor: pointer;
    background-color: #075E54;
}
@media screen and (max-width: 500px) {
    .topnav a:not(:first-child) { display: none;}
    .topnav a.icon {
        float: right;
        display: block;
    }
    .botnav {
        display: flex;
        height: 150px;
    }
    #logo {
        width: 100px;
        height: 60px;
    }
    .botnav a {
        font-size: 12px;
    }
}
@media screen and (max-width: 500px) {
    .topnav.responsive {position: relative;}
    .topnav.responsive .icon {
      position: absolute;
      right: 0;
      top: 0;
    }
    .topnav.responsive a {
      float: none;
      display: block;
      text-align: left;
    }
  }
#forgotpopup {
    
    position: relative;
    max-width: 400px;
    margin: auto;
    top: 30px;
    border-radius: 10px;
    color: white;
    /* letter-spacing: 1px; */
    font-size: 20px;
    text-align: center;
    display: none;
    padding: 10px 20px;

}
#forgetbox {
    position: relative;
    max-width: 500px;
    top: 120px;
    margin: auto;
    padding: 30px;
    margin-bottom: 400px;
    box-shadow: 2px 2px 30px 1px gray;
    border: 1px solid;
}
#forgetbox h3 {
    font-size: 24px;
    font-weight: 600;
    color: rgb(255, 255, 255);
}
#forgetbox p {
    color: white;
    margin-top: 20px;
    margin-bottom: 1px;
}
#forgetbox i {
    position: absolute;
    font-size: 28px;
    margin: 10px;
    background-color: white;
    color: rgb(0, 0, 0);
}
#forgetbox input {
    width: 100%;
    padding: 10px 50px;
    background-color: rgb(245, 245, 245);
    font-size: 18px;
    border-radius: 6px;
    border: 1px solid black;
    /* margin-bottom: 5px; */
}

#forgetbox button {
    position: relative;
    width: 150px;
    border-radius: 10px;
    outline: none;
    padding: 5px;
    background-color: white;
    color: #075E54;
    border: 2px solid #075E54;;

    font-size: 20px;
    cursor: pointer;
}
#forgetbox button:hover {
    background-color: #075E54;;
    color: white;
    border: 2px solid white;
    letter-spacing: 1px;
}
#footer {
    position: relative;
    top: 200px;
    /* bottom: 0px; */
}

.botnav {
    list-style-type: none;
    margin: 0;
    max-width: 100vw;
    padding: 5px;
    overflow: hidden;
    background-color: #075E54;
}
.botnav #appname,.botnav a {
    position: relative;
    width: 100px;
    /* display: block; */
    color: rgb(255, 255, 255);
    /* margin: 10px; */
    font-size: 16px;
    padding: 10px 5px;
    text-decoration: none;
    text-align: center;
}
.botnav a:hover {
    background-color: #0d312d;

}
.botnav a.right {
    position: relative;
    float: right;
}
@media screens and (max-width: 400px) {
    .topnav {
        width: 100%;
        height: auto;
        position: relative;
    }    
    
    .topnav a {
        float: right;
    }
}

